<% if user_signed_in? %>
<div id="friends">
<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Twitter</th>
    <th>User Id</th>
    <th colspan="2">Action</th>
  </tr>
</thead>
<% @friends.each do |friend| %>
  <% if friend.user == current_user %>
      <tr>
        <%= render friend %>
        <td><%=  link_to "Edit", edit_friend_path(friend)%></td>
        <td><%=  button_to "Delete", friend, method: :delete , class:'btn btn-small btn-outline-danger'%></td>
      </tr>
    <% end %>
  <% end %>
</table>
<%= link_to "New Friend", new_friend_path, class:"btn btn-secondary"%>
</div>
<% else %>
  <h1>Hello World!<h1>
  This is my first rails app...
<% end %>



